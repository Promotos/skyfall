<!DOCTYPE html>
<html>
	<head>
		<title><%= t("common.skyfall")%></title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>

	<body>
		<div class="baseFrame">
			<table width="100%" >
				<tr>
					<td colspan="2"><h1>Skyfall</h1></td>
				</tr>
				<tr>
					<td width="160px" style="vertical-align: top;"> 
					<div align="top">
						<% if current_user %>
						<h3>Home</h3>
						<div>
								<li>
									<%= link_to t("menu.home"), root_path %>
								</li>
						</div>
						<h3><%= t("menu.settings") %></h3>
						<div>
								<li>
									<%= link_to t("menu.user"), users_show_path %>
								</li>
						<% end %>
						</div>
					</td>
					<td > <% flash.each do |name, msg| %>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
					<% end %>
					<%= yield %> </td>
				</tr>
				<tr>
					<td colspan="2">
					<table width="100%">
						<tr>
							<td><% if current_user %> <%=t("home.logged_in_as")%> <%=current_user.user_id %> | <%= link_to t("home.logout"), log_out_path %><% end %></td>
							<td align="right">Version 1.0 | Rendered in <%= sprintf('%.3f', (Time.now.usec - @start_time).abs / 1000000.0) %> seconds</td>
						</tr>
					</table></td>
				</tr>
			</table>
		</div>
	</body>
</html>