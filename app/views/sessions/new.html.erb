<center>
	<div class="panel" style="width: 200px; margin: 50px">
		<%= form_tag sessions_path do %>
		<p>
			<%= label_tag :user_id %>
			<br />
			<%= text_field_tag :user_id, params[:user_id] %>
		</p>
		<p>
			<%= label_tag :password %>
			<br />
			<%= password_field_tag :password %>
		</p>
		<p class="button">
			<%= submit_tag "Log in" %>
		</p>
		<% end %>
	</div>
</center>

<script type="application/javascript">document.getElementById('user_id').focus();</script>
