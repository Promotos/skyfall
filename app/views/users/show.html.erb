<p>
	<%= link_to "Neuer Benutzer", users_new_path %>
</p>
<p>
	<%= t("user.show_avail_users")%>
</p>
<table id="simpletable">
	<tr>
		<th align="left">
		<Id>
			<%= t("user.id")%>
		</th>
		<th align="left">
		<Id>
			<%= t("user.user_id")%>
		</th>
	</tr>
	<% User.all.each do |user| %>
	<tr>
		<td> <%= user.id %> </td>
		<td> <%= user.user_id %> </td>
		<td> <%= user.first_name %> </td>
		<td> <%= user.last_name %> </td>
		<td> <%= user.email %> </td>
		<td> <%= user.last_logon %> </td>
		<td> <%= user.last_logon_ip %> </td>
	</tr>
	<% end %>
</table>
